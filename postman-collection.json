        {
          "name": "End Session",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/teleconference/end/1",
              "host": ["{{baseUrl}}"],
              "path": ["teleconference", "end", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Create Care Session Report",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"appointmentId\": 1,\n  \"observations\": \"Patient appeared alert and responsive. Vital signs within normal limits.\",\n  \"interventions\": \"Administered prescribed medications. Provided wound care.\",\n  \"vitals\": {\n    \"bloodPressure\": \"120/80\",\n    \"heartRate\": 72,\n    \"temperature\": 98.6,\n    \"oxygenSaturation\": 98\n  },\n  \"patientStatus\": \"stable\",\n  \"sessionSummary\": \"Routine care session completed successfully. Patient is stable and responding well to treatment.\",\n  \"recommendations\": \"Continue current medication regimen. Follow up in one week.\",\n  \"followUpRequired\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reports",
              "host": ["{{baseUrl}}"],
              "path": ["reports"]
            }
          }
        },
        {
          "name": "Create Critical Status Report",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"appointmentId\": 2,\n  \"observations\": \"Patient showing signs of distress. Difficulty breathing observed.\",\n  \"interventions\": \"Oxygen therapy initiated. Emergency protocols activated.\",\n  \"vitals\": {\n    \"bloodPressure\": \"160/100\",\n    \"heartRate\": 110,\n    \"temperature\": 101.2,\n    \"oxygenSaturation\": 88\n  },\n  \"patientStatus\": \"critical\",\n  \"sessionSummary\": \"Patient condition deteriorated during session. Immediate medical attention required.\",\n  \"recommendations\": \"Emergency room evaluation recommended immediately.\",\n  \"followUpRequired\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reports",
              "host": ["{{baseUrl}}"],
              "path": ["reports"]
            }
          }
        },
        {
          "name": "Get All Reports",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reports?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["reports"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Reports by Patient",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reports?patientId=1",
              "host": ["{{baseUrl}}"],
              "path": ["reports"],
              "query": [
                {
                  "key": "patientId",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
